<?xml version="1.0" encoding="UTF-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".InfoChangeActivity">

    <TextView
        android:id="@+id/nametextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="34dp"
        android:text="이름"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ni_nametextView"
        app:layout_constraintEnd_toStartOf="@+id/nameET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="83dp"
        android:ems="10"
        android:hint="8자 이하"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/nametextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nametextView" />

    <TextView
        android:id="@+id/ni_nametextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="30dp"
        android:text="닉네임"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/id_textView"
        app:layout_constraintEnd_toStartOf="@+id/nicknameET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nametextView" />

    <EditText
        android:id="@+id/nicknameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="83dp"
        android:ems="10"
        android:hint="8자 이하"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ni_nametextView"
        app:layout_constraintTop_toBottomOf="@+id/nameET" />

    <TextView
        android:id="@+id/id_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="20dp"
        android:text="ID"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/pw_textView"
        app:layout_constraintEnd_toStartOf="@+id/userid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ni_nametextView" />

    <TextView
        android:id="@+id/userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="225dp"
        android:layout_marginBottom="11dp"
        android:text="사용자 ID"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/pwET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_textView" />

    <TextView
        android:id="@+id/pw_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="20dp"
        android:text="PW"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/height_textView"
        app:layout_constraintEnd_toStartOf="@+id/pwET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_textView" />

    <EditText
        android:id="@+id/pwET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="4자 이상"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/height_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pw_textView" />

    <TextView
        android:id="@+id/height_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="20dp"
        android:text="키"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/weight_textView"
        app:layout_constraintEnd_toStartOf="@+id/heightET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pw_textView" />

    <EditText
        android:id="@+id/heightET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="cm 단위"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/weight_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/height_textView" />

    <TextView
        android:id="@+id/weight_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="30dp"
        android:text="몸무게"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/email_textView"
        app:layout_constraintEnd_toStartOf="@+id/weightET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height_textView" />

    <EditText
        android:id="@+id/weightET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="83dp"
        android:ems="10"
        android:hint="kg 단위"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weight_textView"
        app:layout_constraintTop_toTopOf="@+id/heightET" />

    <TextView
        android:id="@+id/email_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="40dp"
        android:text="E-Mail"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bdate_textView"
        app:layout_constraintEnd_toStartOf="@+id/emailET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight_textView" />

    <EditText
        android:id="@+id/emailET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="83dp"
        android:ems="10"
        android:hint="'@' 포함"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/email_textView"
        app:layout_constraintTop_toBottomOf="@+id/weightET" />

    <TextView
        android:id="@+id/bdate_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="97dp"
        android:text="Age"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/okBT"
        app:layout_constraintEnd_toStartOf="@+id/ageET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_textView" />

    <EditText
        android:id="@+id/ageET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="83dp"
        android:ems="10"
        android:hint="YYY년 MM월 DD일"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bdate_textView"
        app:layout_constraintTop_toBottomOf="@+id/emailET" />

    <Button
        android:id="@+id/okBT"
        style="@style/defaultButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="136dp"
        android:text="수정하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancelBT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bdate_textView" />

    <Button
        android:id="@+id/cancelBT"
        style="@style/defaultButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="111dp"
        android:text="cancle"
        app:layout_constraintBaseline_toBaselineOf="@+id/okBT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/okBT" />

</androidx.constraintlayout.widget.ConstraintLayout>